{layout '../../../templates/@layout.latte'}
{block content}
    <h2>Admin Dashboard</h2>

    <h3>✅ Turnaje</h3>
    <table class="table">
        <tr><th>Název</th><th>Region</th><th>Začátek</th><th>Akce</th></tr>
        {foreach $tournaments as $t}
            <tr>
                <td>{$t->name}</td>
                <td>{$t->region}</td>
                <td>{$t->start_time|date:'j. n. Y H:i'}</td>
                <td>
                    <a n:href="finishTournament! id => $t->id" class="btn btn-sm btn-success">✅ Označit jako finished</a>
                </td>
            </tr>
        {/foreach}
    </table>

    <h3>👥 Týmy</h3>
    <table class="table">
        <tr><th>Název</th><th>Vlastník</th><th>Akce</th></tr>
        {foreach $teams as $team}
            <tr>
                <td>{$team->name}</td>
                <td>ID {$team->owner_id}</td>
                <td>
                    <a n:href="deleteTeam! id => $team->id" class="btn btn-sm btn-danger">🗑️ Smazat</a>
                </td>
            </tr>
        {/foreach}
    </table>

    <h3>🙍‍♂️ Uživatelé</h3>
    <table class="table">
        <tr><th>Username</th><th>Email</th><th>Role</th><th>Akce</th></tr>
        {foreach $users as $user}
            <tr>
                <td>{$user->username}</td>
                <td>{$user->email}</td>
                <td>{$user->role}</td>
                <td>
                    <a n:href="deleteUser! id => $user->id" class="btn btn-sm btn-danger">🗑️ Smazat</a>
                </td>
            </tr>
        {/foreach}
    </table>

{/block}